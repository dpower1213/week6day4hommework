{% extends 'base.html.j2'%}
{% block title %}
Attack!!
{% endblock %}

{% block content %}
<div id="box" class="d-flex flex-column;">
    <div class="row;">
    <table class="table table-striped table-hover;">
    <thead>
    <tr>
    <th scope="col">First Name</th>
    <th scope="col">Last Name</th>
    <th scope="col">Email</th>
    <th scope="col">Wins</th>
    <th scope="col">Losses</th>
    </tr>
    </thead>
{% for user in users %}
    </tbody>
    <tr>                                   
    <td scope="row">{{user.name_first}}</td>
    <td>{{user.name_last}}</td>
    <td>{{user.email}}</td>
    <td>{{user.wins}}</td>
    <td>{{user.losses}}</td>
    <td><a href="{{ url_for('admin.fight', id = user.user_id) }}" class="btn btn-primary">Fight 'Em</a></td>
    </tr>
    <tbody>
{% endfor %}
    </table>
    </div>
    </div>
{% endblock %}